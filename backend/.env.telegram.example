# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Telegram Web App Configuration
TELEGRAM_APP_URL=https://your-domain.com/app
TELEGRAM_APP_NAME=NEDOMA

# Telegram API Settings
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_APP_ID=your_app_id_here

# Optional Settings
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_ALLOWED_UPDATES=message,callback_query
TELEGRAM_MAX_CONNECTIONS=100

# Debug Settings
TELEGRAM_DEBUG=false
TELEGRAM_LOG_LEVEL=info

# Frontend Integration
FRONTEND_URL=https://your-domain.com
FRONTEND_TELEGRAM_URL=https://your-domain.com/telegram-app

# Security Settings
TELEGRAM_AUTH_TIMEOUT=86400 # 24 hours in seconds
